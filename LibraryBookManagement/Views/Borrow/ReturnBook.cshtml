@model IEnumerable<Borrowed>

<h2>Return a Book</h2>

<table class="table">
    <thead>
        <tr>
            <th>Book Title</th>
            <th>Member Name</th>
            <th>Borrowed Date</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var borrow in Model)
        {
            <tr>
                <td>@borrow.Book.Title</td>
                <td>@borrow.Member.Name</td>
                <td>@borrow.BorrowedDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <form asp-action="ReturnBookConfirmed" method="post" asp-route-id="@borrow.Id">
                        <button type="submit" class="btn btn-success">Return</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary">Back to Borrowed Books</a>
