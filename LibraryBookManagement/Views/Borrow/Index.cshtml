@model IEnumerable<Borrowed>
<h2>Borrow</h2>

<table class="table">
    <thead>
        <tr>
            <th>Book Title</th>
            <th>Member Name</th>
            <th>Borrowed Date</th>
            <th>Return Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var borrow in Model)
        {
            <tr>
                <td>@borrow.Book.Title</td>
                <td>@borrow.Member.Name</td>
                <td>@borrow.BorrowedDate.ToShortDateString()</td>
                <td>@(borrow.ReturnDate.ToShortDateString())</td>
                <td>
                    
                    <a asp-action="Details" asp-route-id="@borrow.Id" class="btn btn-info">Details</a>

                    <!-- Return Book Button (Only show if not returned) -->
                    @if (borrow.ReturnDate == null)
                    {
                        <form asp-action="ReturnBookConfirmed" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@borrow.Id" />
                            <button type="submit" class="btn btn-warning">Return</button>
                        </form>
                    }

                    <!-- Borrow Book Button -->
                    <a asp-action="BorrowBook" asp-route-id="@borrow.Id" class="btn btn-primary">Borrow</a>
                </td>
            </tr>
        }
    </tbody>
</table>

