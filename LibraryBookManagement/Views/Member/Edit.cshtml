@model Member


<h2>Edit Member</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MemberShipData"></label>
        <input asp-for="MemberShipData" class="form-control" />
        <span asp-validation-for="MemberShipData" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BorrowedBooks"></label>
        <textarea asp-for="BorrowedBooks" class="form-control"></textarea>
        <span asp-validation-for="BorrowedBooks" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save Changes</button>
</form>

