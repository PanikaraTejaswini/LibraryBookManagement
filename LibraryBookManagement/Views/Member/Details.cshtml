@{
}
@model MemberViewModel

<h2>Library Members</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>MemberShip Data</th>
            <th>Borrowed Books</th>
            
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.Members != null)
        {
            @foreach (var member in ViewBag.Members)
            {
                <tr>
                    <td>@member.Id</td>
                    <td>@member.Name</td>
                    <td>@member.Email</td>
                    <td>@member.MemberShipData</td>
                    <td>
                        @if (member.BorrowedBooks != null )
                        {
                            <ul>
                                @foreach (var book in member.BorrowedBooks.ToString().Split(','))
                                {
                                    <li>@book</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p>No books borrowed.</p>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@member.Id" class="btn btn-warning">Edit</a>
                        

                        <form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this member?');">
                            <input type="hidden" name="id" value="@member.Id" />
                            <button type="submit" style="background-color:chartreuse;border-radius:20px;">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">No members found.</td>
               
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-primary">Create</a>


